{
  "name": "lsr/laser-liga-api",
  "description": "Connection to the Laser Liga API",
  "type": "library",
  "version": "0.1.1",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.laserliga.cz"
    }
  ],
  "license": "GPL-3.0-or-later",
  "autoload": {
    "psr-4": {
      "Lsr\\LaserLiga\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Tomáš Vojík",
      "email": "vojik@wboy.cz"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "phpstan": "./vendor/bin/phpstan",
    "phpcbf": "./vendor/bin/phpcbf"
  },
  "require": {
    "php": "^8.4",
    "psr/http-message": "^2"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^12",
    "phpstan/phpstan": "^2.0",
    "phpstan/extension-installer": "^1.4",
    "squizlabs/php_codesniffer": "^3.0"
  }
}
